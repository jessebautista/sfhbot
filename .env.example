# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration (for SFH Bot knowledge base)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# External Database Configuration (for existing news/piano content)
EXTERNAL_SUPABASE_URL=your_existing_supabase_project_url
EXTERNAL_SUPABASE_ANON_KEY=your_existing_supabase_anon_key

# Server Configuration
PORT=3001
NODE_ENV=development

# Mem0 Configuration (for personal memory)
MEM0_API_KEY=your_mem0_api_key_here

# Prompt Configuration
# Strategy options: data-first, structured, few-shot, chain-of-thought
PROMPT_STRATEGY=data-first

# Feature Flags
USE_SPECIALIZED_PROMPTS=true
ENFORCE_DATA_USAGE=true
SHOW_DEBUG_INFO=false
LOG_PROMPT_METRICS=true